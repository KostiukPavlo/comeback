  body
    block header
      include header
    block content
      include content
    block footer
      include footer
    block scripts

      script(src='js/splide.min.js')

      script(src='https://code.jquery.com/jquery-2.2.0.min.js')
      script(src='js/slick.min.js')
      script(src='js/main.js')



      script.
        new Splide( '.portfolio-slider',{
          perPage: 1,
          type: "loop",
          drag: false,
          cover: true,
          heightRatio: 0.5,
          //- autoplay: true,
          interval: 4000,
          speed: 800,
          breakpoints : {
            '1100': {
              heightRatio: 0.9,
              drag: true,
            },
            '900': {
              heightRatio: 1.2, drag: true,
            },
            '700': {
              heightRatio: 1.4, drag: true,
            },
            '500': {
              heightRatio: 1.6, drag: true,
            },
            '400': {
              heightRatio: 1.9, drag: true,
            },
            '350': {
              heightRatio: 2.2, drag: true,
            },
          }
        } ).mount();
      script.
