        } ).mount();

      script.
        $('.horizontal-slider').slick({
          slidesToShow: 1,
          slidesToScroll: 1,
          arrows: false,
          fade: true,
          asNavFor: '.vertical-slider'
        });
        $('.vertical-slider').slick({
